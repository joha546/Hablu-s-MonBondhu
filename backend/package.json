{
  "name": "hackathon-backend-starter",
  "version": "0.1.0",
  "description": "Backend Starter for Hackathon projects with Node.js, Express, MongoDB Atlas, Docker, and centralized logging",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --watch ./src --exec babel-node ./src/server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "lint": "eslint ./src --ext .js",
    "pretty": "prettier --write .",
    "docker:up": "docker compose -f ../compose.dev.yml up --build",
    "docker:logs": "docker logs -f hackathon-backend"
  },
  "dependencies": {
    "axios": "^1.13.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "17.2.3",
    "express": "5.1.0",
    "helmet": "8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "8.19.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.24.8",
    "babel-jest": "^30.2.0",
    "eslint": "^9.38.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  }
}
